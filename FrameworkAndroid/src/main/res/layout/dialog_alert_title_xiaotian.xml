<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dialog_title_xiaotian"
        android:orientation="vertical" >

        <TextView
            android:id="@id/id_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal"
            android:paddingBottom="3dp"
            android:text="@string/content_notfound_xiaotian"
            android:textColor="@color/color_text_black_xiaotian"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/background_dialog_content_xiaotian"
        android:gravity="center_horizontal|top" >

        <TextView
            android:id="@id/id_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:text="@string/content_notfound_xiaotian"
            android:textColor="@color/color_text_black_xiaotian"
            android:textSize="14sp" />

        <ImageView
            android:id="@id/id_2"
            android:layout_width="match_parent"
            android:layout_height=".2dp"
            android:layout_above="@id/id_positive_xiaotian"
            android:layout_marginTop="12dp"
            android:background="#b2b3b4"
            android:contentDescription="@string/content_notfound_xiaotian" />

        <Button
            android:id="@id/id_positive_xiaotian"
            style="@style/style_dialog_button"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/string_positive_xiaotian" />
    </RelativeLayout>

</LinearLayout>