<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <ImageButton
        android:id="@id/view_model_blockview_icon_xiaotian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_notfound_xiaotian"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <ImageView
        android:id="@id/view_model_blockview_footimage_xiaotian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0.0dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_notfound_xiaotian"
        android:maxHeight="50.0dp"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <TextView
        android:id="@id/view_model_blockview_header_xiaotian"
        style="@style/view_model_blockview_header_xiaotian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5.0dp"
        android:layout_marginTop="3.0dp"
        android:contentDescription="@string/content_notfound_xiaotian"
        android:lines="1"
        android:textColor="@color/color_text_white_xiaotian"
        android:visibility="gone" />

    <TextView
        android:id="@id/view_model_blockview_secondheader_xiaotian"
        style="@style/view_model_blockview_secondheader_xiaotian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/view_model_blockview_header_xiaotian"
        android:layout_marginLeft="5.0dp"
        android:contentDescription="@string/content_notfound_xiaotian"
        android:gravity="left"
        android:lines="1"
        android:textColor="@color/color_text_white_xiaotian"
        android:visibility="gone" />

    <TextView
        android:id="@id/view_model_blockview_footer_xiaotian"
        style="@style/view_model_blockview_footer_xiaotian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3.0dp"
        android:contentDescription="@string/content_notfound_xiaotian"
        android:gravity="center_horizontal"
        android:textColor="@color/color_text_white_xiaotian"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/view_model_blockview_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="12.0dp"
        android:layout_marginTop="5.0dp"
        android:background="@drawable/background_main_message_xiaotian"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0.0dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/view_model_blockview_badge_number"
            style="@style/view_model_blockview_footer_xiaotian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3.0dp"
            android:lines="1"
            android:textColor="@color/color_text_white_xiaotian" />
    </LinearLayout>

</RelativeLayout>