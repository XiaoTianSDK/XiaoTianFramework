<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@id/id_0"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/id_1"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:contentDescription="@string/content_notfound_xiaotian"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@id/id_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="正在下载"
                android:textColor="@color/color_text_black_xiaotian"
                android:textSize="16sp"/>

            <TextView
                android:id="@id/id_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_2"
                android:singleLine="true"
                android:text="下载中"
                android:textColor="@color/color_text_black_xiaotian"
                android:textSize="14sp"/>

            <ProgressBar
                android:id="@id/id_4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/id_3"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:progressDrawable="@drawable/layerlist_progress_download_file"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>